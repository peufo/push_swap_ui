generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id          Int       @id @default(autoincrement())
    email       String    @unique
    url         String
    login       String
    displayname String
    imageMicro  String
    imageSmall  String
    imageMedium String
    imageLarge  String
    campus      String?
    sessions    Session[]
}

model Session {
    id        String   @id
    userId    Int
    expiresAt DateTime

    user User @relation(references: [id], fields: [userId], onDelete: Cascade)
}
